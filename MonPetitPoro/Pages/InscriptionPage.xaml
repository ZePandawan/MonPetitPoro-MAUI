<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonPetitPoro.InscriptionPage">
    <Grid>
    <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <ScrollView Grid.Row="0">
        <StackLayout>
            <Label Text="Inscription" FontSize="Title" HorizontalOptions="Center" Margin="10,5,10,10"/>
            <Entry x:Name="emailEntry" Placeholder="Adresse Mail" Margin="10,5,10,10"/>
            <Entry x:Name="usernameEntry" Placeholder="Nom d'utilisateur" Margin="10,5,10,10"/>
            <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True" Margin="10,5,10,10"/>
            <Entry x:Name="confirmPasswordEntry" Placeholder="Confirmer le mot de passe" IsPassword="True" Margin="10,5,10,10"/>
            <Button x:Name="InscriptionBtn" Text="Crée mon compte" Clicked="OnInscriptionBtnClicked" Margin="10,5,10,10"/>
        </StackLayout>
    </ScrollView>
            <Label Text="Déja un compte ?" HorizontalOptions="Center" Margin="10,10,10,5" Grid.Row="1"/>
            <Button Text="Connexion" x:Name="ConnexionBtn" Clicked="OnConnexionBtnClicked" Margin="10,5,10,10" Grid.Row="2"/>
    </Grid>
</ContentPage>