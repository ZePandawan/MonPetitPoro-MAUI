<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonPetitPoro.MainPage"
             Title=""
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.NavBarHasShadow="False"
             Shell.BackgroundColor="Black"
             >
    
    <AbsoluteLayout>
        <!-- Background Image -->
        <Image Source="background.jpg"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="1,1,1,1"
               Opacity="0.75"
               Aspect="Fill" />

        <!-- Main Content -->
        <Grid AbsoluteLayout.LayoutFlags="All"
              AbsoluteLayout.LayoutBounds="0,0,1,1">
            <!-- Define rows for content and buttons -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Scrollable content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout
                    Padding="30,0"
                    Spacing="25">

                    <!--
                    <Image
                        Source="lol_poro.png"
                        HeightRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Aspect="AspectFit"
                        Margin="0,10,0,0" />
                    -->
                    <Frame Style="{StaticResource FrameTextStyle}"  HasShadow="True">
                        <Label Style="{StaticResource TextStyle}"
                            Text="Plongez dans l'univers de League of Legends avec Mon Petit Poro : 
                               Pariez sans risque, vibrez comme un pro !"
                            SemanticProperties.HeadingLevel="Level1" FontAutoScalingEnabled="False" />
                    </Frame>
                    <!--
                    <Button
                        x:Name="ListTeams"
                        Text="Liste des équipes Lol répertoriées"
                        Clicked="OnListClicked"
                        HorizontalOptions="Fill"
                        Margin="10,10,10,10" />
                    -->
                </VerticalStackLayout>
            </ScrollView>

            <!-- Fixed button at the bottom -->
            <Button Style="{StaticResource PrimaryButtonStyle}"
                Grid.Row="1"
                x:Name="ConnexionBtn"
                Text="Connecte-toi !"
                SemanticProperties.Hint="Connexion"
                Clicked="OnConnexionBtnClicked"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                Margin="10,10,10,5" />
            <Button Style="{StaticResource PrimaryButtonStyle}"
                Grid.Row="2"
                x:Name="InscriptionBtn"
                Text="Inscris toi !"
                SemanticProperties.Hint="Inscription"
                Clicked="OnInscriptionBtnClicked"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                Margin="10,5,10,10" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>
